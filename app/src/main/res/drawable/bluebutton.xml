<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#FF4081"/>
            <stroke
                android:color="#2f6699"
                android:width="3dp"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#19189E"/>
            <stroke
                android:color="#2f6699"
                android:width="3dp"/>
            <corners
                android:radius="5dp"/>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>